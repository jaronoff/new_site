<%= content_for :page_title, 'Projects' %>

<h1><%= yield(:page_title) %></h1>

<dl class="sub-nav">
  <dt>Filter:</dt>
  <dd class="active"><a href="#">All</a></dd>
  <dd><a href="#">UI/UX</a></dd>
  <dd><a href="#">Web Design</a></dd>
  <dd><a href="#">Graphic Design</a></dd>
</dl>

<% @projects.in_groups_of(4, false).each_with_index do |project_group, project_group_index| %>
  <div class="row">
    <% project_group.each_with_index do |project, project_index| %>
      <% if project_group_index == 0 and project_index == 0 %>
        <div class="row">
          <div class="large-12 show-for-small columns">
            <h3>Header</h3>
            <hr>
          </div>
        </div>
      <% end %>

      <div class="large-3 small-12 columns project">
        <a href="<%= 'projects/' + to_kebab_case(project.name) %>"><img height="500" width="500" src="<%= project.project_cover.url %>"></a>
        <div class="panel">
          <a href="<%= 'projects/' + to_kebab_case(project.name) %>"><h4><%= project.name %></h4></a>
          <% project.project_fields.each do |project_field| %>
            <div><%= project_field.field.name %></div>
          <% end %>
          <br>

          <p><%= truncate(project.description, length: 120) %></p>
        </div>
      </div>
    <% end %>
  </div>
  <br>
<% end %>

<div class="large-12 show-for-small columns"></div>
